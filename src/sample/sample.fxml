<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <Text id="welcome-text" text="Welcome To the Client Interface" GridPane.columnIndex="0" GridPane.columnSpan="4"
          GridPane.rowIndex="0"/>

    <Label  text="Admission Number:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField GridPane.columnIndex="1" fx:id="admNo" GridPane.columnSpan="3" GridPane.rowIndex="1"/>

    <Label text="Course:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField GridPane.columnIndex="1"   fx:id="course" GridPane.columnSpan="3" GridPane.rowIndex="2"/>
    <Label text="Faculty:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField GridPane.columnIndex="1"  fx:id="faculty" GridPane.columnSpan="3" GridPane.rowIndex="3"/>
    <Label text="University:"  GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField GridPane.columnIndex="1" fx:id="university"  GridPane.columnSpan="3" GridPane.rowIndex="4"/>

    <HBox alignment="CENTER" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button onAction="#handleSendData" text="Send Data"/>
    </HBox>


    <Label text="Proceedings:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <TextArea  fx:id="textAreaField" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.rowSpan="1"/>

    <TextField fx:id="portField" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="10"/>
    <HBox alignment="bottom_left" spacing="5" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="10">
        <Button onAction="#handleConnection" text="Connect"/>
    </HBox>


</GridPane>
